{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "strict": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/tsbuild.info",
        "paths": {
            "@ts-extras/loaders/*": [
                "../loaders/src/*"
            ],
            "@ts-extras/mem-fs/*": [
                "../mem-fs/src/*"
            ],
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../loaders"
        },
        {
            "path": "../mem-fs"
        }
    ]
}