{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/tsbuild.info",
        "paths": {
            "@ts-extras/loaders/*": [
                "../loaders/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../loaders"
        }
    ]
}