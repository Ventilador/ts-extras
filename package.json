{
  "name": "ts-server-tcp",
  "version": "1.0.0",
  "description": "Plugin for the Typescript server which enables remove tcp connections to the language server",
  "main": "index.js",
  "repository": "https://github.com/Ventilador/ts-server-tcp.git",
  "author": "ventilador",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/fs-extra": "^7.0.0",
    "@types/yargs": "^13.0.0",
    "fs-extra": "^8.0.1",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1",
    "yargs": "^13.2.4"
  },
  "peerDependencies": {
    "typescript": "^3.5.1"
  },
  "scripts": {
    "ts-node": "node ./bin/ts-node",
    "play": "ts-node --transpile-only bin/playground.ts",
    "all": "node bin/workspaces",
    "test": "yarn ts-node ./bin/runTest.ts",
    "watch": "tsc -b -w",
    "compile": "tsc -b",
    "clean": "rimraf dist node_modules",
    "cleand": "rimraf dist",
    "gulp": "node --inspect-brk node_modules/gulp/bin/gulp"
  },
  "workspaces": [
    "constants",
    "plugin",
    "serialization",
    "server",
    "ts-shared",
    "utils",
    "ts-shared/tests"
  ]
}