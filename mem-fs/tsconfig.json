{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./src",
        "tsBuildInfoFile": "./dist/tsbuild.info",
        "preserveConstEnums": true,
        "paths": {
            "@ts-extras/tree-node/*": [
                "../tree-node/src/*"
            ],
            "@ts-extras/types": [
                "../extra-types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../tree-node/"
        }
    ]
}