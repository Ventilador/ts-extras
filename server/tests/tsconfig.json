{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/tsbuild.info",
        "baseUrl": "./src",
        "paths": {
            "@ts-extras/shared/*": [
                "../src/*"
            ],
            "@ts-extras/serialization/*": [
                "../../src/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "references": [
        {
            "path": "./../tsconfig.json"
        },
        {
            "path": "./../../serialization/tsconfig.json"
        }
    ]
}