{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "tsBuildInfoFile": "./dist/tsbuild.info",
        "types": [
            "node"
        ],
        "paths": {
            "@ts-utils/serialization/*": [
                "../serialization/src/*"
            ],
            "@ts-utils/constants/*": [
                "../constants/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "references": [
        {
            "path": "../constants/"
        },
        {
            "path": "../serialization"
        }
    ]
}